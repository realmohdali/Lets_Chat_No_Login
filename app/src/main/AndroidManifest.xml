<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.curioustechguru.letschat_nologin">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LetsChatNoLogin">
        <activity
            android:name="com.curioustechguru.letschat_nologin.ViewImage"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.curioustechguru.letschat_nologin.Chat"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.curioustechguru.letschat_nologin.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name="com.curioustechguru.letschat_nologin.services.BackgroundService" />
    </application>

</manifest>